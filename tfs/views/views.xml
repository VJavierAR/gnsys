<odoo>
  <data>
    <record model="ir.ui.view" id="tfs.list">
      <field name="name">tfs.form</field>
      <field name="model">tfs.tfs</field>
      <field name="arch" type="xml">
<form>
    <header>
        <button name="confirm" type="object" string="Confirmar" attrs="{'invisible': ['|','|',('id','=',False),('estado','=','xValidar'),('estado','=','Valido')]}"></button>
        <field name="estado" widget="statusbar"/>
    </header>
    <sheet>
        <div>
            <span>
                <field name="name" readonly="1"/>
            </span>
        </div>
        <group name="gral">
            <group name="1">
                <field name="serie" domain="[]" readonly="0" edit="0"/>
                <field name="colorBN" invisible="1"/>
                <field name="productoNegro" domain="[['categ_id.name','=','Toner']]" />
                <field name="productoCian" domain="[['categ_id.name','=','Toner']]" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}"/>
                <field name="productoAmarillo" domain="[['categ_id.name','=','Toner']]" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}"/>
                <field name="productoMagenta" domain="[['categ_id.name','=','Toner']]" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}"/>
            </group>
            <group name="2">
                <field name="usuario" invisible="1"/>
                <field name="almacen" invisible="1"/>
                <field name="cliente"/>
                <field name="localidad"/>
                <field name="domi" invisible="1"/>
            </group>
        </group>
        <group name="gral1">
            <field name="actualMonocromatico" />
            <field name="actualColor" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}"/>
        </group>
        <notebook name="notebookA">
            <page name="Contadores" string="Contadores">
                <group>
                    <group name="a"  string="Contadores Monocromatico">
                        <field name="contadorMono" invisible="1"/>
                        <field name="contadorAnteriorMono"/>
                        <field name="actualporcentajeNegro" widget="percentpie"/>
                        <field name="porcentajeAnteriorNegro" widget="percentpie"/>
                    </group>
                    <group name="b" string="Contadores Cian" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}">
                        <field name="contadorCian" invisible="1"/>

                        <field name="contadorAnteriorCian"/>
                        <field name="actualporcentajeCian" widget="percentpie"/>
                        <field name="porcentajeAnteriorCian" widget="percentpie"/>
                    </group>
                </group>
                <group>
                    <group name="c" string="Contadores Amarillo" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}">
                        <field name="contadorAmarillo" invisible="1"/>

                        <field name="contadorAnteriorAmarillo"/>
                        <field name="actualporcentajeAmarillo" widget="percentpie"/>
                        <field name="porcentajeAnteriorAmarillo" widget="percentpie"/>
                    </group>
                    <group name="d" string="Contadores Magenta" attrs="{'invisible': ['|',('colorBN','=','B/N'),('serie','=',False)]}">
                                                <field name="contadorMagenta" invisible="1"/>

                        <field name="contadorAnteriorMagenta"/>
                        <field name="actualporcentajeMagenta" widget="percentpie"/>
                        <field name="porcentajeAnteriorMagenta" widget="percentpie"/>
                    </group>
                </group>
            </page>
            <page name="evidencias" string="Evidencias">
                <field name="evidencias">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="evidencia"/>
                    </tree>
                </field>
            </page>
            <page name="existencias" string="Existencias">
                <field name="inventario" domain="[['lot_id','=',False]]"/>
            </page>
        </notebook>
    </sheet>
    <div class="oe_chatter">
        <field name="message_follower_ids" widget="mail_followers"/>
        <field name="activity_ids" widget="mail_activity"/>
        <field name="message_ids" widget="mail_thread"/>
    </div>
</form>
     
      </field>
    </record>
            <record id="email_template_tfs_tfs" model="mail.template">
            <field name="name">Cambios de Mini Almacenes: Send by email</field>
            <field name="model_id" ref="tfs.model_tfs_tfs"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.user_id.email_formatted |safe}</field>
            <field name="subject">${object.company_id.name}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Do not hesitate to contact us if you have any question.
    </p><table style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;" cellspacing="0" cellpadding="0" border="0"><tbody><tr><td align="center">
<table style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
<tbody>
    <!-- HEADER -->
    <tr>
        <td style="min-width: 590px;" align="center">
            <table style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                <tbody><tr><td valign="middle"><span style="font-size: 10px;">Remplazo en Mini Almacen creado</span><br>
                    <span style="font-size: 20px; font-weight: bold;">
                        ${object.name}
                    </span>
                </td><td align="right" valign="middle">
                    <img src="/logo.png?company=${object.company_id.id}" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${object.company_id.name}">
                </td></tr>
                <tr><td colspan="2" style="text-align:center;">
                  <hr style="border-top-style:solid;background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" width="100%">
                </td></tr>
            </tbody></table>
        </td>
    </tr>
    <!-- CONTENT -->
    <tr>
        <td style="min-width: 590px;" align="center">
            <table style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                <tbody><tr><td valign="top">
                    <div><span style="font-size: 13px; color: rgb(0, 0, 0);">Se genero un remplazo en mini almacen ${object.name} con un toner&nbsp; &nbsp;</span><span style="font-size: 13px; color: rgb(0, 0, 0); font-weight: bolder;">${object.</span><span style="text-align: inherit;"><font color="#000000"><b>producto.display_name</b></font></span><span style="font-size: 13px; font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; text-align: inherit; color: rgb(0, 0, 0); font-weight: bolder;">}&nbsp; para el cliente&nbsp;</span><span style="font-size: 13px; font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; font-weight: initial; text-align: inherit; color: rgb(0, 0, 0);">${object.cliente.name} en la localidad&nbsp;</span><span style="font-family: Verdana, Arial, sans-serif; font-size: initial; font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; font-weight: initial; text-align: inherit;">${object.localidad.name}</span><span style="color: rgb(0, 0, 0); font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; font-weight: initial; text-align: inherit;">&nbsp;</span></div><div style="font-size: 13px;"><span style="color: rgb(0, 0, 0); text-align: inherit;"><span style="font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; font-weight: initial;">haga clic en el siguiente&nbsp;</span>botón<span style="font-style: initial; font-variant-ligatures: initial; font-variant-caps: initial; font-weight: initial;">&nbsp;remplazo realizado:</span></span><br><a href="/web#id=${object.id}&amp;model=tfs.tfs&amp;view_type=form" class="btn btn-alpha" data-original-title="" title="" aria-describedby="tooltip38760" style="user-select:none;">Pendiente </a><br><br><span style="color: rgb(0, 0, 0); font-family: Roboto, Noto; font-size: medium;">O en otro caso en el siguiente botón para ver el listado de remplazos:</span><br><br><span style="color: rgb(0, 0, 0); font-family: Roboto, Noto; font-size: medium;"><a href="/web#action=1112&amp;model=tfs.tfs&amp;view_type=list" class="btn btn-alpha" data-original-title="" title="" aria-describedby="tooltip151778" style="user-select:none;">Listado</a><br><br> <br>Gracias,${user.signature | safe}<br>
                    </span></div>
                </td></tr>
                <tr><td style="text-align:center;">
                  <hr style="border-top-style:solid;background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;" width="100%">
                </td></tr>
            </tbody></table>
        </td>
    </tr>
    <!-- FOOTER -->
    <tr>
        <td style="min-width: 590px;" align="center">
            <table style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
                <tbody><tr><td align="left" valign="middle">
                    ${object.company_id.name}
                </td></tr>
                <tr><td style="opacity: 0.7;" align="left" valign="middle">
                    ${object.company_id.phone}
                    % if object.company_id.email
                        | <a href="'mailto:%s' % ${object.company_id.email}" style="color:rgb(0, 135, 132); color: #454748;">${object.company_id.email}</a>
                    % endif
                    % if object.company_id.website
                        | <a href="'%s' % ${object.company_id.website}" style="color:rgb(0, 135, 132); color: #454748;">
                        ${object.company_id.website}
                    </a>
                    % endif
                </td></tr>
            </tbody></table>
        </td>
    </tr>
</tbody>
</table>
</td></tr>
<!-- POWERED BY -->
<tr><td style="min-width: 590px;" align="center">
    <table style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;" width="590" cellspacing="0" cellpadding="0" border="0">
      <tbody><tr><td style="text-align: center; font-size: 13px;">
        Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" style="color: #875A7B;">Odoo</a>
      </td></tr>
    </tbody></table>
</td></tr>
</tbody></table>
</div>
            </field>
            <field name="lang">${object.user_id.lang}</field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="True"/>
        </record>
      
  </data>
</odoo>
