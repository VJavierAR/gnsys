    <record model="ir.ui.view" id="sale_order_compatibles.form">
      <field name="name">sale_order_compatibles.form</field>
      <field name="model">sale_order_compatibles</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name='estado' widget='statusbar'/>
          </header>

          <group>
            <group name='Sale order'>
              <field name="saleOrder"/>
            </group>
          </group>

          <group>
            <group name='Equipo'>
              <field name="equipos" domain='["categ_id.id", "=", 13]'/>
            </group>
          </group>

          <group>
            <group name='Componentes'>
              <field name="componentes"/>
            </group>
          </group>

          <group>
            <group name='Toner'>
              <field name="toner"/>
            </group>
          </group>

          <group>
            <group name='Accesorios'>
              <field name="accesorios"/>
            </group>
          </group>

          <group>
            <group name='Compatibles'>
              <field name="compatibles"/>
            </group>
          </group>

        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="sale_order_compatibles_mini.form">
      <field name="name">sale_order_compatibles_mini.form</field>
      <field name="model">sale_order_compatibles_mini</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <!--<field name='estado' widget='statusbar'/>-->
          </header>

          <group>
            <group name='Sale order'>
              <field name="idProducto"/>
            </group>
          </group>

          <group>
            <group name='Equipo'>
              <field name="producto" domain='["categ_id.id", "=", 13]'/>
              <field name="cantidad" domain='["categ_id.id", "=", 13]'/>
            </group>
          </group>


        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="sale_order_compatibles_mini.tree">
      <field name="name">sale_order_compatibles_mini.form</field>
      <field name="model">sale_order_compatibles_mini</field>
      <field name="arch" type="xml">
        <tree>
          
          <field name="idProducto"/>
          <field name="producto" domain='["categ_id.id", "=", 13]'/>
          <field name="cantidad" domain='["categ_id.id", "=", 13]'/>

        </tree>
      </field>
    </record>



