    <record id="view_stock_picking_mass_action_form" model="ir.ui.view">
        <field name="model">stock.picking.mass.action</field>
        <field name="arch" type="xml">
            <form string="Mass Action for the selected stock picking">
                <group>
                    <field name="confirm" invisible="1"/>
                    <field name="check_availability" invisible="1"/>
                    <field name="transfer" invisible="1"/>
                    <field name="check" invisible="1"/>
                    <field name="tecnico"  domain="['|',['job_id.name','=','TÃ‰CNICO '],['job_id.name','=','SOFTWARE']]" attrs="{'invisible':[['check','=',1]]}" />

                    
                </group>
                <footer>
                    <button name="mass_action" string="Apply" type="object" class="oe_highlight"/>
                    <button name="vales" string="Vale de Entrega" type="object" class="oe_highlight"/>
                    <button name="etiquetas" string="Etiquetas" type="object" attrs="{'invisible':[['check','=',2]]}" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

